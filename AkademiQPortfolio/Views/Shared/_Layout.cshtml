@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr" class="dark">
@{
    var action = ViewContext.RouteData.Values["action"]?.ToString();
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Spline+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">

    <!-- Font Awesome İkonları -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- Devicon (Teknoloji İkonları) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#135bec",
                        background: "#f6f6f8",
                        darkbg: "#101622"
                    },
                    fontFamily: {
                        display: ["Spline Sans", "sans-serif"]
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-background dark:bg-darkbg font-display text-slate-900 dark:text-white">
    <!-- Navbar -->
    <header class="sticky top-0 z-50 bg-white/80 dark:bg-darkbg/80 backdrop-blur border-b border-slate-200 dark:border-slate-800">
        <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
            <h1 class="text-xl font-bold text-primary">Seda</h1>
            <nav class="hidden md:flex gap-8 text-sm font-medium">
                <a href="/" class="@(action == "Index" ? "text-primary font-bold" : "text-slate-700 dark:text-slate-300") hover:text-primary transition">Ana Sayfa</a>
                <a href="/Home/About" class="@(action == "About" ? "text-primary font-bold" : "text-slate-700 dark:text-slate-300") hover:text-primary transition">Hakkımda</a>
                <a href="/Home/Projects" class="@(action == "Projects" ? "text-primary font-bold" : "text-slate-700 dark:text-slate-300") hover:text-primary transition">Projeler</a>
                <a href="/Home/Contact" class="@(action == "Contact" ? "text-primary font-bold" : "text-slate-700 dark:text-slate-300") hover:text-primary transition">İletişim</a>
            </nav>

            <!-- Mobil Menu Butonu -->
            <button id="mobile-menu-btn" class="md:hidden text-slate-700 dark:text-slate-300">
                <i class="fas fa-bars text-xl"></i>
            </button>
        </div>

        <!-- Mobil Menu -->
        <div id="mobile-menu" class="hidden md:hidden bg-white dark:bg-darkbg border-t border-slate-200 dark:border-slate-800">
            <nav class="flex flex-col gap-4 p-6">
                <a href="/" class="@(action == "Index" ? "text-primary font-bold" : "text-slate-700 dark:text-slate-300") hover:text-primary transition">Ana Sayfa</a>
                <a href="/Home/About" class="@(action == "About" ? "text-primary font-bold" : "text-slate-700 dark:text-slate-300") hover:text-primary transition">Hakkımda</a>
                <a href="/Home/Projects" class="@(action == "Projects" ? "text-primary font-bold" : "text-slate-700 dark:text-slate-300") hover:text-primary transition">Projeler</a>
                <a href="/Home/Contact" class="@(action == "Contact" ? "text-primary font-bold" : "text-slate-700 dark:text-slate-300") hover:text-primary transition">İletişim</a>
            </nav>
        </div>
    </header>

    <!-- Page Content -->
    <main class="max-w-7xl mx-auto px-6 py-12 min-h-[calc(100vh-160px)]">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-t border-slate-200 dark:border-slate-800 py-8">
        <div class="max-w-7xl mx-auto px-6">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="text-center md:text-left">
                    <p class="font-bold text-primary text-lg mb-1">Seda Yardımcı</p>
                    <p class="text-sm text-slate-500">Yazılım Geliştirici</p>
                </div>

                <div class="flex gap-4">
                    <a href="https://github.com/sedayardimci" target="_blank"
                       class="w-10 h-10 bg-slate-100 dark:bg-slate-800 rounded-full flex items-center justify-center hover:bg-primary hover:text-white transition">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="https://linkedin.com" target="_blank"
                       class="w-10 h-10 bg-slate-100 dark:bg-slate-800 rounded-full flex items-center justify-center hover:bg-primary hover:text-white transition">
                        <i class="fab fa-linkedin"></i>
                    </a>
                    <a href="mailto:seda@example.com"
                       class="w-10 h-10 bg-slate-100 dark:bg-slate-800 rounded-full flex items-center justify-center hover:bg-primary hover:text-white transition">
                        <i class="fas fa-envelope"></i>
                    </a>
                </div>

                <p class="text-sm text-slate-500 text-center md:text-right">
                    © @DateTime.Now.Year Tüm hakları saklıdır
                </p>
            </div>
        </div>
    </footer>

    <!-- Mobil Menu Script -->
    <script>
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');

        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }
    </script>
</body>
</html>