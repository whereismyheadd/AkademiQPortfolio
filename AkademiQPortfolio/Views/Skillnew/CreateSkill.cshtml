@model AkademiQPortfolio.Data.Skilltable
@{
    ViewData["Title"] = "CreateSkill";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h1 style="margin-bottom:20px; color:#ffffff;">Yeni Yetenek Ekle</h1>

<div style="
    background:#ffffff;
    border-radius:16px;
    padding:30px;
    max-width:650px;
    box-shadow:0 8px 20px rgba(0,0,0,0.08);
">

    <h2 style="margin-bottom:20px;">Yetenek Bilgileri</h2>

    <form method="post" style="max-width:420px;">

        <div style="margin-bottom:18px;">
            <label style="
            color:#212529;
            font-weight:600;
            margin-bottom:6px;
            display:block;">
                Title
            </label>
            <input type="text"
                   name="Title"
                   class="form-control"
                   style="color:#212529; background:#fff;" />

        </div>

        <div style="margin-bottom:18px;">
            <label style="
            color:#212529;
            font-weight:600;
            margin-bottom:6px;
            display:block;">
                Level (%)
            </label>
            <input type="number"
                   name="Levels"
                   class="form-control"
                   style="color:#212529; background:#fff;" />
        </div>

        <div style="margin-bottom:22px;">
            <label style="
            color:#212529;
            font-weight:600;
            margin-bottom:6px;
            display:block;">
                Test
            </label>
            <input type="text"
                   name="Test"
                   class="form-control"
                   style="color:#212529; background:#fff;" />
        </div>

        <div style="display:flex; gap:14px;">
            <button type="submit"
                    style="
                background:#198754;
                color:#fff;
                border:none;
                padding:10px 28px;
                border-radius:10px;
                font-weight:600;">
                Kaydet
            </button>

            <a href="/Skillnew/SkillList"
               style="
           background:#6c757d;
           color:#fff;
           padding:10px 28px;
           border-radius:10px;
           text-decoration:none;
           font-weight:600;">
                İptal
            </a>
        </div>

    </form>



</div>
