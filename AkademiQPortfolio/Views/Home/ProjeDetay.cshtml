@model AkademiQPortfolio.Data.ProjectsTable

@{
    ViewData["Title"] = Model.ProjectName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="relative py-20 px-6 overflow-hidden bg-slate-50 dark:bg-slate-900/50">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full opacity-10 pointer-events-none">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary rounded-full blur-[120px]"></div>
        <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-blue-500 rounded-full blur-[120px]"></div>
    </div>

    <div class="max-w-6xl mx-auto relative z-10">
        <a asp-action="Projects" class="inline-flex items-center gap-2 text-slate-500 hover:text-primary transition-all mb-8 group">
            <span class="material-symbols-outlined text-sm transition-transform group-hover:-translate-x-1">arrow_back</span>
            <span class="font-bold uppercase tracking-widest text-xs">Projelere Dön</span>
        </a>

        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
            <div class="max-w-3xl">
                @if (Model.Category != null)
                {
                    <span class="px-4 py-1.5 bg-primary/10 text-primary text-[11px] font-black uppercase tracking-[0.2em] rounded-full mb-6 inline-block">
                        @Model.Category.CategoryName
                    </span>
                }
                <h1 class="text-5xl md:text-7xl font-black text-slate-800 dark:text-white leading-none">
                    @Model.ProjectName
                </h1>
            </div>
            <div class="flex gap-4 mb-2">
                <button class="w-12 h-12 rounded-full border border-slate-200 dark:border-slate-700 flex items-center justify-center hover:bg-primary hover:text-white transition-all shadow-sm">
                    <span class="material-symbols-outlined">share</span>
                </button>
            </div>
        </div>
    </div>
</section>

<section class="pb-24 px-6 -mt-10 relative z-20">
    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">

            <div class="lg:col-span-8">
                <div class="rounded-[2.5rem] overflow-hidden shadow-2xl shadow-slate-200 dark:shadow-none border-8 border-white dark:border-slate-800 bg-white">
                    <img src="@Model.Images" alt="@Model.ProjectName" class="w-full h-auto object-cover" />
                </div>

                <div class="mt-12 space-y-8">
                    <div class="p-8 rounded-3xl bg-white dark:bg-slate-800/50 border border-slate-100 dark:border-slate-700">
                        <h3 class="text-2xl font-bold mb-4 text-slate-800 dark:text-white flex items-center gap-3">
                            <span class="w-2 h-8 bg-primary rounded-full"></span>
                            Proje Hakkında
                        </h3>
                        <p class="text-lg text-slate-600 dark:text-slate-300 leading-relaxed font-light">
                            @Model.Title
                        </p>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-4 space-y-6">
                <div class="sticky top-24 p-8 rounded-[2rem] bg-slate-900 text-white shadow-xl">
                    <h4 class="text-xl font-bold mb-6 border-b border-white/10 pb-4">Proje Künyesi</h4>

                    <div class="space-y-6">
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-primary">person</span>
                            </div>
                            <div>
                                <p class="text-[10px] uppercase text-white/50 font-bold tracking-widest">Geliştirici</p>
                                <p class="font-medium">Seda Yardımcı</p>
                            </div>
                        </div>

                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-primary">calendar_today</span>
                            </div>
                            <div>
                                <p class="text-[10px] uppercase text-white/50 font-bold tracking-widest">Tamamlanma</p>
                                <p class="font-medium">Ocak 2026</p>
                            </div>
                        </div>

                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-primary">terminal</span>
                            </div>
                            <div>
                                <p class="text-[10px] uppercase text-white/50 font-bold tracking-widest">Kategori</p>
                                <p class="font-medium">@Model.Category?.CategoryName</p>
                            </div>
                        </div>
                    </div>

                    <button class="w-full mt-8 py-4 bg-primary text-white rounded-2xl font-bold hover:scale-[1.02] transition-transform flex items-center justify-center gap-2 shadow-lg shadow-primary/20">
                        <span>Canlı Önizleme</span>
                        <span class="material-symbols-outlined">open_in_new</span>
                    </button>
                </div>
            </div>

        </div>
    </div>
</section>